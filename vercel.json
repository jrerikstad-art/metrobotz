{
  "buildCommand": "npm run build",
  "functions": {
    "api/bots.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/posts.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/bot-post.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/cron-autonomous-posting.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron-autonomous-posting",
      "schedule": "*/30 * * * *"
    }
  ]
}
